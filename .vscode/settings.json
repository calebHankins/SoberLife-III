{
    "kiroAgent.configureMCP": "Enabled",
    "chat.tools.edits.autoApprove": {
        "**/*": true,
        "**/.vscode/*.json": false,
        "**/.git/**": false,
        "**/{package.json,package-lock.json,server.xml,build.rs,web.config,.gitattributes,.env}": false,
        "**/*.{csproj,fsproj,vbproj}": false
    },
    "chat.tools.terminal.autoApprove": {
        "/^npx serve \\. -p 8001$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^git --no-pager status/": {
            "approve": true,
            "matchCommandLine": false
        },
        "/^node --check/": {
            "approve": true,
            "matchCommandLine": false
        },
        "/^git --no-pager diff \\.* \\| Select-Object -First 80$/": {
            "approve": true,
            "matchCommandLine": false
        },
        "/^git --no-pager diff/": {
            "approve": true,
            "matchCommandLine": false
        }
    },
    "chat.agent.maxRequests": 100,
    "cSpell.words": [
        "autoplay",
        "cooldown",
        "crossfade",
        "crossfading",
        "Desync",
        "detuning",
        "flexbox",
        "gamified",
        "Hankins",
        "insightfully",
        "kiro",
        "LIFX",
        "lofi",
        "networkidle",
        "Noticeability",
        "Noto",
        "oneline",
        "playtesting",
        "playthrough",
        "Playthroughs",
        "replayability",
        "rgba",
        "roleplay",
        "soberlife",
        "spammable",
        "stevia",
        "tappable",
        "timbral",
        "unlockable",
        "unmute",
        "valuenow",
        "viewports"
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.markdownlint": "always"
    }
}