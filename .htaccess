# Cache Control for SoberLife III
# Note: GitHub Pages has limited .htaccess support, but these headers
# document best practices for other hosting environments

<IfModule mod_headers.c>
    # HTML files - no cache (always check for updates)
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>

    # CSS and JavaScript - cache for 1 year (we use version query strings)
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header set ETag ""
    </FilesMatch>

    # Images and fonts - cache for 1 month
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
</IfModule>

# Enable ETags for better cache validation
<IfModule mod_headers.c>
    FileETag MTime Size
</IfModule>
