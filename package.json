{
    "name": "soberlife-iii",
    "version": "0.26.0",
    "description": "Stress management game combining blackjack mechanics with real-world task completion scenarios",
    "scripts": {
        "serve": "npx serve . -p 8000",
        "test": "playwright test",
        "test:headed": "playwright test --headed",
        "test:debug": "playwright test --debug",
        "test:ui": "playwright test --ui",
        "test:mobile": "playwright test --project=mobile",
        "test:report": "playwright show-report",
        "release": "release-it",
        "release:patch": "release-it --ci --increment patch",
        "release:minor": "release-it --ci --increment minor",
        "release:major": "release-it --ci --increment major",
        "release:dry": "release-it --dry-run"
    },
    "keywords": [
        "stress-management",
        "blackjack",
        "game",
        "wellness"
    ],
    "author": "Caleb Hankins",
    "license": "MIT",
    "devDependencies": {
        "@playwright/test": "^1.48.0",
        "release-it": "^19.0.6"
    }
}
